{
  "name": "nodejs-tdd-template",
  "version": "1.0.0",
  "description": "Node.js TDD template for CHIP 12 Trainees",
  "main": "src/index.js",
  "scripts": {
    "start": "npm-run-all build server",
    "build": "npm-run-all clean transpile copy",
    "copy": "cp ./src/swagger.json ./bin",
    "server": "node ./bin/index.js",
    "transpile": "babel ./src --out-dir ./bin",
    "clean": "rimraf ./bin",
    "watch": "nodemon",
    "test": "jest --coverage --runInBand --forceExit",
    "lint": "eslint ./ --ext .js"
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "author": "Awesome CHIP Trainers",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@types/jest": "^29.5.12",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "mongodb-memory-server": "^9.2.0",
    "nodemon": "^3.1.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.0",
    "joigoose": "^8.0.2",
    "mongodb": "^6.5.0",
    "mongoose": "^8.3.2",
    "swagger-ui-express": "^5.0.0"
  }
}
