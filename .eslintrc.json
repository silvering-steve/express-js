{
  "env": {
    "es2023": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-lines-per-function": [
      "warn",
      {
        "max": 15
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],

      "rules": {
        "max-lines-per-function": "off"
      }
    }
  ]
}
